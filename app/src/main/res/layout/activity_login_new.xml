<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_marginLeft="@dimen/y12"
        android:layout_marginTop="@dimen/y21"
        android:paddingLeft="@dimen/x15"
        android:paddingRight="@dimen/x15"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:layout_width="@dimen/x54"
        android:layout_height="@dimen/y40"
        android:gravity="center"
        android:src="@mipmap/saoyisao01"
        android:contentDescription="TODO" />


    <TextView
        android:layout_marginTop="@dimen/y23"
        android:layout_marginRight="@dimen/x13"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:paddingRight="@dimen/x15"
        android:paddingLeft="@dimen/x15"
        android:layout_alignParentRight="true"
        android:id="@+id/login_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/register"
        android:includeFontPadding="false"
        android:textColor="@color/blue"
        android:textSize="@dimen/x17" />


    <!--<include layout="@layout/header_layout"/>-->



    <!--loge-->
    <ImageView
        android:id="@+id/iv_login_icon"
        android:layout_marginLeft="@dimen/x95"
        android:layout_marginTop="@dimen/y91"
        android:layout_width="@dimen/x165"
        android:layout_height="@dimen/y42"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@mipmap/denglu01" />



    <LinearLayout
        android:layout_below="@id/iv_login_icon"
        android:id="@+id/ll_login_location"
        android:layout_width="@dimen/x306"
        android:layout_height="@dimen/y47"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y27"
        android:background="@drawable/yuan_baise50"
        android:orientation="horizontal">

        <TextView
            android:includeFontPadding="false"
            android:textColor="@color/black_text_login"
            android:textSize="@dimen/x14"
            android:id="@+id/login_tv_position"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/x15"
            android:paddingBottom="@dimen/x15"
            android:text="请选择省-市-区" />

        <View
            android:layout_marginRight="@dimen/x14"
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y27"
            android:layout_marginTop="@dimen/y12"
            android:background="@color/gray"
            android:gravity="center" />


        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y16"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x23"
            android:gravity="center"
            android:src="@mipmap/weizhi01" />
    </LinearLayout>

    <!--医院-->
    <RelativeLayout
        android:id="@+id/ll_select_hist"
        android:layout_below="@id/ll_login_location"
        android:layout_width="@dimen/x306"
        android:layout_height="@dimen/y47"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/yuan_baise50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hospital_left"
            android:includeFontPadding="false"
            android:textSize="@dimen/x14"
            android:layout_marginLeft="@dimen/x22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_login"
            android:layout_centerVertical="true"
            android:text="@string/login_tv02" />

        <TextView
            android:layout_marginLeft="@dimen/x14"
            android:id="@+id/tv_hospital"
            android:textColor="@color/black_text_login"
            android:textSize="@dimen/x14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_hospital_left"
            android:layout_centerVertical="true"
            android:text="@string/login_et02" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y7"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x23"
            android:gravity="center"
            android:src="@mipmap/xuanze01" />
    </RelativeLayout>
    <!--大区-->
    <RelativeLayout
        android:id="@+id/ll_select_area"
        android:layout_below="@id/ll_select_hist"
        android:layout_width="@dimen/x306"
        android:layout_height="@dimen/y47"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/yuan_baise50"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_de_area"
            android:includeFontPadding="false"
            android:textSize="@dimen/x14"
            android:layout_marginLeft="@dimen/x22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_login"
            android:layout_centerVertical="true"
            android:text="@string/login_tv03" />

        <TextView
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/x14"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_de_area"
            android:id="@+id/tv_area"
            android:textColor="@color/black_text_login"
            android:textSize="@dimen/x14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_et03" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y7"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x23"
            android:gravity="center"
            android:src="@mipmap/xuanze01" />
    </RelativeLayout>
    <!--科室-->
    <RelativeLayout
        android:id="@+id/ll_select_depart"
        android:layout_below="@id/ll_select_area"
        android:layout_width="@dimen/x306"
        android:layout_height="@dimen/y47"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/yuan_baise50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_de_depart"
            android:includeFontPadding="false"
            android:textSize="@dimen/x14"
            android:layout_marginLeft="@dimen/x22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_login"
            android:layout_centerVertical="true"
            android:text="@string/login_tv04" />

        <TextView
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@id/tv_de_depart"
            android:layout_centerVertical="true"
            android:id="@+id/tv_depart"
            android:textColor="@color/black_text_login"
            android:textSize="@dimen/x14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_et04" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y7"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x23"
            android:gravity="center"
            android:src="@mipmap/xuanze01" />
    </RelativeLayout>
    <!--分区-->
    <RelativeLayout
        android:id="@+id/ll_select_moreares"
        android:layout_below="@id/ll_select_depart"
        android:layout_width="@dimen/x306"
        android:layout_height="@dimen/y47"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/yuan_baise50"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_de_subarea"
            android:includeFontPadding="false"
            android:textSize="@dimen/x14"
            android:layout_marginLeft="@dimen/x22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_login"
            android:layout_centerVertical="true"
            android:text="@string/login_tv05" />

        <TextView
            android:layout_marginLeft="@dimen/x14"
            android:layout_toRightOf="@id/tv_de_subarea"
            android:layout_centerVertical="true"
            android:id="@+id/tv_subarea"
            android:textSize="@dimen/x14"
            android:textColor="@color/black_text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_et05" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y7"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x23"
            android:gravity="center"
            android:src="@mipmap/xuanze01" />
    </RelativeLayout>


    <!--密码-->
    <RelativeLayout
        android:layout_below="@id/ll_select_moreares"
        android:layout_width="@dimen/x306"
        android:layout_height="@dimen/y47"
        android:layout_marginLeft="@dimen/x27"
        android:layout_marginRight="@dimen/x27"
        android:layout_marginTop="@dimen/y10"
        android:background="@drawable/yuan_baise50"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_de_pwd"
            android:includeFontPadding="false"
            android:textSize="@dimen/x14"
            android:layout_marginLeft="@dimen/x22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/gray_login"
            android:layout_centerVertical="true"
            android:text="@string/login_tv06" />

        <EditText
            android:layout_marginLeft="@dimen/x18"
            android:includeFontPadding="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_de_pwd"
            android:id="@+id/et_pwd"
            android:textSize="@dimen/x14"
            android:layout_width="@dimen/x170"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/login_et06"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLines="1"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_show_pwd"
            android:layout_width="@dimen/x21"
            android:layout_height="@dimen/y9"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center"
            android:src="@mipmap/mima01" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_bottom"
        android:layout_width="@dimen/x358"
        android:layout_height="@dimen/y144">

        <ImageView
            android:layout_alignParentBottom="true"
            android:src="@mipmap/denglu02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_marginTop="@dimen/y22"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginRight="@dimen/x27"
            android:background="@drawable/yuan_lanse50"
            android:layout_width="@dimen/x306"
            android:layout_height="@dimen/y47">

        <TextView
            android:layout_centerInParent="true"
            android:includeFontPadding="false"
            android:layout_width="@dimen/x58"
            android:layout_height="wrap_content"
            android:id="@+id/login_tv01"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y17"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white100"
            android:textSize="@dimen/x18" />
        </RelativeLayout>

        <TextView
            android:includeFontPadding="false"
            android:textSize="@dimen/x13"
            android:layout_marginLeft="@dimen/x250"
            android:layout_below="@id/rl_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/y17"
            android:text="@string/login_tv07"
            android:textColor="@color/text66" />

    </RelativeLayout>

</RelativeLayout>
