<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x340"
    android:background="@drawable/duct_user_dialog_selecotr"
    android:layout_height="@dimen/y422">

    <View
        android:id="@+id/v_bed_icon"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginTop="@dimen/y31"
        android:background="@mipmap/bed_icon"
        android:layout_width="@dimen/x34"
        android:layout_height="@dimen/y34"/>
    <TextView
        android:textSize="@dimen/x15"
        android:includeFontPadding="false"
        android:layout_marginLeft="@dimen/x6"
        android:layout_marginTop="@dimen/y41"
        android:layout_toRightOf="@id/v_bed_icon"
        android:textColor="@color/black_black"
        android:text="01号床"
        android:id="@+id/bed_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="@dimen/x9"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/y43"
        android:layout_toRightOf="@id/bed_info_name"
        android:id="@+id/tv_name_sex_age"
        android:textSize="@dimen/x13"
        android:textColor="@color/black_text_login"
        android:text="名字 男 30岁"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_close_icon"
        android:paddingTop="@dimen/y7"
        android:paddingRight="@dimen/x8"
        android:paddingLeft="@dimen/x8"
        android:paddingBottom="@dimen/y7"
        android:layout_alignParentRight="true"
        android:src="@mipmap/duct_close_icon"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/y26"/>

    <TextView
        android:id="@+id/tv_edit"
        android:includeFontPadding="false"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/y43"
        android:textSize="@dimen/x15"
        android:layout_alignParentRight="true"
        android:textColor="@color/blue"
        android:text="修改"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/v_line_top"
        android:layout_marginTop="@dimen/y70"
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_duct_view"
        android:layout_below="@id/v_line_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y309"/>
    <View
        android:id="@+id/v_line_tottom"
        android:layout_below="@id/rv_duct_view"
        android:background="@color/gray_line"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:id="@+id/ll_bottom_ductin"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/v_line_tottom"
        android:layout_width="@dimen/x280"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_bottom_name"
            android:includeFontPadding="false"
            android:textSize="@dimen/x15"
            android:textColor="@color/black_text_login"
            android:text="置入"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
