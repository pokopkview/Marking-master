<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y59">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_select_area"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y58">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/hospital_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black_black"
            android:text="请选择区域"
            android:maxLength="3"
            android:maxLines="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:textSize="@dimen/x14"
            android:layout_centerInParent="true"
            android:id="@+id/tv_select_are"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_alignParentRight="true"
            android:src="@mipmap/up_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
        <View
            android:background="@color/gray_listview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>
    </LinearLayout>



    <ListView
        android:id="@+id/lv_area"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
