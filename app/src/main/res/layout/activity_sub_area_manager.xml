<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bottom_bg"
    tools:context=".activity.SubAreaManagerActivity">
    <include layout="@layout/header_layout"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y57">

        <TextView
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginTop="@dimen/y28"
            android:textColor="@color/black_text_login"
            android:textSize="@dimen/x16"
            android:text="片区管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/x202"
            android:layout_marginTop="@dimen/y28"
            android:textColor="@color/black_text_login"
            android:textSize="@dimen/x16"
            android:text="床位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/x310"
            android:layout_marginTop="@dimen/y28"
            android:textColor="@color/black_text_login"
            android:textSize="@dimen/x16"
            android:text="移除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_subarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>